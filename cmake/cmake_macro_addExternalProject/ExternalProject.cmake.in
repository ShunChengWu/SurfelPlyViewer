cmake_minimum_required(VERSION 3.11)

project(@PROJECT_NAME@_external NONE)

include(ExternalProject)
ExternalProject_Add(
	@PROJECT_NAME@
	GIT_REPOSITORY      @PROJECT_URL@
    	PREFIX              "@PROJECT_BINARY_DIR@/@PROJECT_NAME@/build"
	INSTALL_DIR         "@CMAKE_BINARY_DIR@/@PROJECT_NAME@"
	CMAKE_ARGS          "-DCMAKE_INSTALL_PREFIX=@CMAKE_BINARY_DIR@/@PROJECT_NAME@"
#	CMAKE_ARGS          "-DCMAKE_INSTALL_PREFIX=${CMAKE_INSTALL_PREFIX}"
	BUILD_COMMAND       ${MAKE}
	TEST_COMMAND        ""
	UPDATE_DISCONNECTED 1
    	STEP_TARGETS        update
)
